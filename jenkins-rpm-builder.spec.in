Name: 		jenkins-rpm-builder
Version: 	@@version@@
Release:	0%{?dist}
Summary: 	wrapper for building rpm packages in jenkins
BuildArch: 	noarch

Group:		ETN
License:	GPL
URL:		http://github.com/jhrcz/jenkins-rpm-builder/
Source0: 	%{name}-%{version}.tar.gz
BuildRoot:	%(mktemp -ud %{_tmppath}/%{name}-%{version}-%{release}-XXXXXX)

#BuildRequires:	
#Requires:	


%description
no description


%prep
%setup -q


%build


%install
rm -rf $RPM_BUILD_ROOT
make DESTDIR=$RPM_BUILD_ROOT install


%clean
rm -rf $RPM_BUILD_ROOT


%files
%defattr(-,root,root,-)

%config(noreplace) /etc/jenkins-rpm-builder.conf

/usr/libexec/jenkins-rpm-builder/*

%doc jenkins-rpm-builder.conf.SAMPLE


%changelog
